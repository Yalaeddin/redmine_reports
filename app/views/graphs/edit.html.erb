<h2><%= link_to l(:label_graph_plural), graphs_path %> &#187; <%=h @graph.title %></h2>

<%= labelled_form_for @graph, :url => {:controller=>'graphs', :action=>'update'}, :html => { :class => nil, :method => :put } do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>
	<p><%= submit_tag l(:button_update) %></p>
<% end %>
